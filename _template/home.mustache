<!doctype html>

<html lang="en">
<head>
    {{>common/header}}
    <title>Gabriel Rawson</title>
    <meta name="Portfolio" content="Gabriel Rawson's Portfolio">
    <link rel="stylesheet" href="/_css/home.css">
    <script src="/_js/home.js"></script>
</head>
<body>

    <div id="fullpage">

        <!-- section 1 -->
        <div id="s1" class="section">
            <div id="name-container">
                <div id="blurred-bar">
                    <div id="arrow">
                        <img src="/supporting-files/images/arrow.png" alt="">
                    </div>
                    <div id="name">GAVI.RAWSON</div>
                </div>
            </div>
        </div>

        <!-- Section 2 -->
        <div id ="s2" class="section">
            <div id="section-wrapper">

                <table>
                    {{#bio}}
                    <tr>
                        <td><img class="bio-img" src="/supporting-files/images/code-icon.png" alt="img"></td>
                        <td class="sidebar"></td>
                        <td>
                            <h3 class="bio-title">{{bio-title}}</h3>
                            <p class="bio-body">{{bio-body}}</p>
                        </td>
                    </tr>
                    {{/bio}}
                </table>
            </div>
        </div>
    </div>

</body>
</html>
